<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="48dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp">

        <!-- Spacer -->
        <View android:layout_width="match_parent" android:layout_height="16dp"/>

        <!-- Company Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:hint="Company Name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>

        <View android:layout_height="16dp" android:layout_width="match_parent"/>

        <!-- Company Phone -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:hint="Company Phone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextCompanyPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"/>
        </com.google.android.material.textfield.TextInputLayout>

        <View android:layout_height="16dp" android:layout_width="match_parent"/>

        <!-- Company Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:hint="Company Email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextCompanyEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>

        <View android:layout_height="16dp" android:layout_width="match_parent"/>

        <!-- Project Details (bigger text area) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:hint="Project Details"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextProjectDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="4"/>
        </com.google.android.material.textfield.TextInputLayout>

        <View android:layout_height="16dp" android:layout_width="match_parent"/>

        <!-- Link database to website? -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBoxLinkDatabase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link database to website" />

        <!-- Need a new website? -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBoxNewWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I want a new website" />

        <View android:layout_height="16dp" android:layout_width="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your app/website's language"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Application / website language (spinner) -->
        <Spinner
            android:id="@+id/spinnerLanguage"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <View android:layout_height="16dp" android:layout_width="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated number of products"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerProductRange"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <View android:layout_height="16dp" android:layout_width="match_parent"/>

        <!-- Estimated delivery deadline (date picker) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:hint="Estimated Delivery Deadline"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextDeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"/>
        </com.google.android.material.textfield.TextInputLayout>

        <View android:layout_height="16dp" android:layout_width="match_parent"/>

        <!-- Submit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSubmit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Submit"
            app:cornerRadius="8dp" />

    </LinearLayout>
</ScrollView>
