<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground" > <TextView
    android:id="@+id/textViewCompanyName"  android:textColor="@color/black" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?attr/textAppearanceListItem"
    android:textSize="18sp"
    android:textStyle="bold"
    tools:text="Example Company Name Ltd." /> <TextView
    android:id="@+id/textViewDeadline"   android:textColor="@color/black" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:textAppearance="?attr/textAppearanceListItemSecondary"
    android:textSize="14sp"
    tools:text="Deadline: 2025-12-31" /> </LinearLayout>