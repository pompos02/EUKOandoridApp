<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmissionDetailsActivity"
    android:padding="48dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/textViewCompanyNameDetail"   android:textColor="@color/black" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textSize="18sp"
            tools:text="Example Company Name Ltd." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Details:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/textViewProjectDetailsDetail"   android:textColor="@color/black" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textSize="16sp"
            tools:text="Detailed description of the project requirements goes here. It might be several lines long." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Email:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/textViewCompanyEmailDetail"   android:textColor="@color/black" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textSize="16sp"
            android:autoLink="email"  android:textColorLink="#0000FF" tools:text="contact@example.com" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Phone:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/textViewCompanyPhoneDetail"   android:textColor="@color/black" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textSize="16sp"
            android:autoLink="phone"  android:textColorLink="#0000FF" tools:text="6901234567" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Deadline:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/textViewDeadlineDetail"   android:textColor="@color/black" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textSize="16sp"
            tools:text="2025-12-31" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferred Language:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/textViewLanguageDetail" android:textColor="@color/black" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textSize="16sp"
            tools:text="Greek" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requires New Website:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/textViewNewWebsiteDetail"   android:textColor="@color/black" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textSize="16sp"
            tools:text="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requires Database Link:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/textViewLinkDatabaseDetail"   android:textColor="@color/black" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textSize="16sp"
            tools:text="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submitted On:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/textViewTimestampDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            tools:text="14 Apr 2025, 03:30:00 PM" />

        <Button
            android:id="@+id/buttonDelete" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Submission"
            app:backgroundTint="@android:color/holo_red_light" android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>